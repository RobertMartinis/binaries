#!/bin/sh

# Prints the status of mullvad VPN in DWMBlocks.
# ðŸ¦«ðŸŸ¢ Indicates online. ðŸ¦«ðŸ”´ Indicates offline. Also, a flag is shown for the current country you're connected to.
# (Mole isn't available as an emoji at the moment, so a beaver will do.)


# TODO: Emoji flag instead of country code
country=$(geoiplookup "$(wget http://ipinfo.io/ip -qO -)" | awk '{print $4}' | sed 's/.$//')

icon="ðŸ¦« "

if ip link show | grep -q tun0; then
    status="on"
    button="ðŸŸ¢ "
 else
    status="off"
    button="ðŸ”´ "
fi


case $BLOCK_BUTTON in
    1) mullvad-vpn ;;
    2) if [ "$status" == "on" ]; then
           mullvad disconnect
       else
           mullvad connect
       fi ;;
    3) notify-send "ðŸ¦« Mullvad VPN" "\- Press to open Mullvad GUI

Status: $button " ;;

    6) "$TERMINAL" -e "$EDITOR" "$0" ;;

esac

 printf "%s%s%s\n" "$icon" "$button" "$country"
